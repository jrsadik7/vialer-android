<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--
        Logo fragment values.
    -->
    <integer name="logo_dismiss_delay_ms">1000</integer>

    <dimen name="onboarding_text_input_layout_text_size_">16dp</dimen>

    <!-- Onboarding colors -->
    <color name="onboarding_color_accent">@color/color_accent</color>
    <color name="onboarding_color_highlight">@color/color_highlight</color>
    <color name="onboarding_button_normal_color">@color/onboarding_color_accent</color>
    <color name="onboarding_button_text_color">@color/onboarding_color_highlight</color>

    <color name="onboarding_edittext_hint_color">@color/onboarding_color_accent</color>
    <color name="onboarding_edittext_text_color">@color/onboarding_color_accent</color>
    <color name="onboarding_text_input_layout_text_color">@color/color_highlight</color>
    <color name="onboarding_button_anchor_color">@color/onboarding_color_accent</color>
    <color name="onboarding_header_textview_color">@color/onboarding_color_accent</color>

    <!-- Theme -->
    <style name="OnboardingTheme" parent="@style/AppTheme">
        <item name="colorControlNormal">@color/onboarding_color_accent</item>
        <item name="colorControlActivated">@color/onboarding_color_highlight</item>
        <item name="colorControlHighlight">@color/onboarding_color_accent</item>

        <item name="colorButtonNormal">@color/onboarding_button_normal_color</item>

        <item name="android:buttonStyle">@style/OnboardingButtonStyle</item>
        <item name="android:editTextStyle">@style/OnboardingEditTextStyle</item>
    </style>


    <!-- Button Style -->
    <style name="OnboardingButtonStyle" parent="android:style/Widget.Material.Button">
        <item name="android:textAppearance">@style/OnboardingButtonTextAppearance</item>
    </style>

    <!-- Button Text Appearance -->
    <style name="OnboardingButtonTextAppearance" parent="android:style/TextAppearance.Material.Button">
        <item name="android:textColor">@color/onboarding_button_text_color</item>
    </style>

    <!-- EditText Style -->
    <style name="OnboardingEditTextStyle" parent="android:style/Widget.Material.EditText">
        <item name="android:textColorHint">@color/onboarding_edittext_hint_color</item>
        <item name="android:textColor">@color/onboarding_edittext_text_color</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <style name="OnboardingTextInputLayoutStyle" parent="android:style/TextAppearance">
        <item name="android:textSize">@dimen/onboarding_text_input_layout_text_size_</item>
        <item name="android:textColor">@color/onboarding_text_input_layout_text_color</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Style for the Forgot password button -->
    <style name="ButtonAnchorStyle" parent="@android:style/Widget.Holo.Button.Borderless">
        <item name="android:color">@color/onboarding_button_anchor_color</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <!-- Style for Header TextViews -->
    <style name="HeaderTitleTextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/onboarding_header_textview_color</item>
        <item name="android:textSize">36sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <!-- Style for Header TextViews subtitle -->
    <style name="HeaderSubTitleTextViewStyle" parent="@style/HeaderTitleTextViewStyle">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!-- Style for Forgot password description TextView -->
    <style name="DescriptionTextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/onboarding_header_textview_color</item>
        <item name="android:textSize">20sp</item>
    </style>

    <color name="background_onboarding">@color/color_primary</color>
</resources>
